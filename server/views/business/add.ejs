<%- include ../partials/header.ejs %> <%- include ../partials/navbar.ejs %>

<!-- Frontend Add page(Client side) -->
<div class="container ">
  <div class="row">
    <div class="offset-md-3 col-md-6">
      <h1 class="text-center"><%= title %></h1>

      <form class="form" method="POST">
        <div class="form-group">
          <label for="nameTextField">Contact Name</label>
          <input
            type="text"
            class="form-control"
            id="nameTextField"
            placeholder="Enter the Contact Name"
            name="name"
            required
          />
        </div>

        <div class="form-group">
          <label for="authorTextField">Contact Email</label>
          <input
            type="text"
            class="form-control"
            id="authorTextField"
            placeholder="Enter your Email"
            name="email"
            required
          />
        </div>

        <div class="form-group">
          <label for="publishedTextField">Contact Number</label>
          <input
            type="text"
            class="form-control"
            id="publishedTextField"
            placeholder="Enter contact number"
            name="number"
            required
          />
        </div>

        <button class="btn btn-primary mt-3" type="submit" style="margin-left: 30%;">
          <i class="fas fa-edit"></i> Submit
        </button>

        <a href="/businessContacts" class="btn btn-warning mt-3 ml-3" >
          <i class="fas fa-undo"></i> Cancel</a
        >
      </form>
    </div>
  </div>
</div>

<%- include ../partials/footer.ejs %>

<!--Thios file contains Bootstrap navigation bar customised for this particular website-->

<body class="background-color">
  <!-- navigation bar -->

  <nav
    class="navbar fixed-top navbar-expand-lg navbar-dark"
    style="background-color: black"
  >
    <!--navbar code starts here-->
    <div class="container-fluid">
      <a class="navbar-brand" href="/"
        ><img
          class="logo"
          src="../../../Assets/images/61XpBD-wJDL._SL1500_.jpg"
          alt="logo" /></a
      ><!--linking to the home page-->
      <button
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ml-auto mb-2 mb-lg-0">
          <% if (title == "Home"){ %><!--JS code to trigger the activate function to only the present page-->
          <li class="nav-item active"><% } else { %></li>

          <li class="nav-item">
            <% } %>
            <a class="nav-link" href="/"
              ><i class="fas fa-lg fa-laptop-house"></i> Home
            </a>
          </li>

          <% if (title == "Projects") { %>
          <li class="nav-item active"><% } else { %></li>

          <li class="nav-item">
            <% } %>
            <a class="nav-link" href="/projects"
              ><i class="fab fa-elementor"></i> Projects
            </a>
          </li>

          <% if (title == "Services") { %>
          <li class="nav-item active"><% } else { %></li>

          <li class="nav-item">
            <% } %>
            <a class="nav-link" href="/services"
              ><i class="fas fa-cogs"></i> Services
            </a>
          </li>

          <% if (title == "Business contacts") { %>
          <li class="nav-item active"><% } else { %></li>

          <li class="nav-item">
            <% } %>
            <a class="nav-link" href="/businessContacts"
              ><i class="far fa-address-book"></i> Business Contacts
            </a>
          </li>

          <% if (title == "About") { %>
          <li class="nav-item active"><% } else { %></li>

          <li class="nav-item">
            <% } %>
            <a class="nav-link" href="/about"
              ><i class="fas fa-info-circle"></i> About Me
            </a>
          </li>

          <% if (title == "Contact") { %>
          <li class="nav-item active"><% } else { %></li>

          <li class="nav-item">
            <% } %>
            <a class="nav-link" href="/contact"
              ><i class="fas fa-mobile-alt"></i> Contact
            </a>
          </li>
          <% if(typeof displayName == 'string' && displayName){ %>
          <li class="navbar-text">
            <i class="fas fa-lg fa-user"></i>Welcome, <%= displayName %>
          </li>
          <li class="nav-item">
            <a href="/logout" class="nav-link">
              <i class="fas fa-lg fa-sign-out-alt"></i>Logout</a
            >
          </li>
          <%} else { %>
          <li class="nav-item">
            <a href="/login" class="nav-link">
              <i class="fas fa-lg fa-sign-in-alt"></i>Login</a
            >
          </li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>
  <br />
  <br />
</body>
